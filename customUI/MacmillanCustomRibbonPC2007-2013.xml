<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<!-- Custom Ribbon XML added using Custom UI Editor for Microsoft Office -->
<!-- Available here: http://openxmldeveloper.org/blog/b/openxmldeveloper/archive/2009/08/07/7293.aspx -->
<!-- RibbonControl is a VBA module in same template as this customUI.xml code -->
<!-- NOTE! Add images for BOTH PC (transparent) and Mac (gray background) here-->

<customUI xmlns="http://schemas.microsoft.com/office/2009/07/customui" onLoad="RibbonControl.Onload">
  <ribbon>
    <tabs>
      <tab idMso="TabDesign" visible="false" />
      <tab idMso="TabHome">
        <!-- Hides Styles Group -->
        <group idMso="GroupStyles" visible="false"/>
        <group id="Styles1" label="Paragraph Styles">

          <button id="sty1" label="Tx" screentip="Body Text" size="normal" onAction="ApplyStyle.ApplyParaStyle" tag="Body-Text (Tx)" />
          <button id="sty2" label="Num" screentip="Number" size="normal" onAction="ApplyStyle.ApplyParaStyle" tag="Number (Num)" />
          <button id="sty3" label="Ttl" screentip="Title" size="normal" onAction="ApplyStyle.ApplyParaStyle" tag="Title (Ttl) " />

          <button id="sty4" label="MHead" screentip="Main Head" size="normal" onAction="ApplyStyle.ApplyParaStyle" tag="Main-Head (MHead)" />
          <button id="sty5" label="Ahead" screentip="A-Head" size="normal" onAction="ApplyStyle.ApplyParaStyle" tag="A-Head (Ahead)" />
          <button id="sty6" label="Img" screentip="Image Placement" size="normal" onAction="ApplyStyle.ApplyParaStyle" tag="Image-Placement (Img)" />

          <button id="sty7" label="Ext1" screentip="Extract1" size="normal" onAction="ApplyStyle.ApplyParaStyle" tag="Extract1 (Ext1)" />
          <button id="sty8" label="Ext2" screentip="Extract2" size="normal" onAction="ApplyStyle.ApplyParaStyle" tag="Extract2 (Ext2)" />
          <button id="sty9" label="Tmg" screentip="Text Message" size="normal" onAction="ApplyStyle.ApplyParaStyle" tag="Text-Message (Tmg)" />


          <button id="sty10" label="Vrs1" screentip="Verse1" size="normal" onAction="ApplyStyle.ApplyParaStyle" tag="Verse1 (Vrs1)" />
          <button id="sty11" label="Epi" screentip="Epigraph Non-Verse" size="normal" onAction="ApplyStyle.ApplyParaStyle" tag="Epigraph-Non-Verse (Epi)" />
          <button id="sty12" label="Epiv" screentip="Epigraph Verse" size="normal" onAction="ApplyStyle.ApplyParaStyle" tag="Epigraph-Verse (Epiv)" />

          <button id="sty13" label="Episrc" screentip="Epigraph Source" size="normal" onAction="ApplyStyle.ApplyParaStyle" tag="Epigraph-Source (Episrc)" />
          <button id="sty14" label="Date" screentip="Dateline" size="normal" onAction="ApplyStyle.ApplyParaStyle" tag="Dateline (Date)" />
          <button id="sty15" label="Loc" screentip="Location" size="normal" onAction="ApplyStyle.ApplyParaStyle" tag="Location (Loc)" />

          <button id="sty16" label="Bl1" screentip="Bullet List Level-1" size="normal" onAction="ApplyStyle.ApplyParaStyle" tag="Bullet-Level-1-List (Bl1)" />
          <button id="sty17" label="Nl1" screentip="Number List Level-1" size="normal" onAction="ApplyStyle.ApplyParaStyle" tag="Num-Level-1-List (Nl1)" />
          <button id="sty18" label="Ul1" screentip="Unnumbered List Level-1" size="normal" onAction="ApplyStyle.ApplyParaStyle" tag="Unnum-Level-1-List (Ul1)" />

        </group>

        <group id="Styles2" label="Character Styles">

          <button id="csty1" label="b" screentip="bold" size="normal" onAction="ApplyStyle.ApplyCharStyle" tag="bold (b)" />
          <button id="csty2" label="i" screentip="italic" size="normal" onAction="ApplyStyle.ApplyCharStyle" tag="ital (i)" />
          <button id="csty3" label="sc" screentip="smallcaps" size="normal" onAction="ApplyStyle.ApplyCharStyle" tag="smallcaps (sc)" />

          <button id="csty4" label="sup" screentip="superscript" size="normal" onAction="ApplyStyle.ApplyCharStyle" tag="super (sup)" />
          <button id="csty5" label="sub" screentip="subscript" size="normal" onAction="ApplyStyle.ApplyCharStyle" tag="sub (sub)" />
          <button id="csty6" label="bi" screentip="bold-ital" size="normal" onAction="ApplyStyle.ApplyCharStyle" tag="bold-ital (bi) " />

        </group>

        <group id="Styles3" label="Inserts">
          <button id="isty1" label="Insert Section" screentip="Inserts Section divider" image="section" size="large" onAction="ApplyStyle.InsertSection" />
          <button id="isty2" label="Insert Container" screentip="Inserts container start and end" image="container" size="large" onAction="ApplyStyle.InsertContainer" />
          <button id="isty3" label="Insert Break" screentip="Inserts a break indicator" image="break" size="large" onAction="ApplyStyle.InsertBreak" />
        </group>

      </tab>
      <tab id="CustomTab1" label="Macmillan Tools" insertAfterMso="TabHome">
        <group id="CustGrp1" label="Macmillan Styles" >
          <button id="AttachTemplateMacro.zz_AttachStyleTemplate" label="Add Manuscript Styles" image="addfile" size="large" onAction="RibbonControl.LaunchMacros" />
          <button id="AttachTemplateMacro.zz_AttachBoundMSTemplate" label="Remove Color Guides" image="removefile" size="large" onAction="RibbonControl.LaunchMacros" />
          <button id="AttachTemplateMacro.zz_AttachCoverTemplate" label="Add Cover Copy Styles" image="book" size="normal" onAction="RibbonControl.LaunchMacros" />
          <button id="PrintStyles.PrintStyles" label="Print Styles in Margin" image="print" size="normal" onAction="RibbonControl.LaunchMacros" />
          <button id="ViewStyles.StylesViewLaunch" size="normal" image="eye" onAction="RibbonControl.LaunchMacros" label="View Styles"/>
        </group>
        <group id="CustGrp2" label="Manuscript Tools" >
          <!--<button id="CastoffMacro.UniversalCastoff" label="Castoff" image="calculator" size="large" onAction="RibbonControl.LaunchMacros" />-->
          <button id="Endnotes.EndnoteDeEmbed" label="Unlink Endnotes" image="unlink" size="large" onAction="RibbonControl.LaunchMacros" />
          <button id="Clean_Start.LaunchCleanup" label="Manuscript Cleanup" image="wineglass" size="large" onAction="RibbonControl.LaunchMacros" />
        </group>
        <group id="CustGrp3" label="Style Tools" >
          <button id="Clean_Start.LaunchTagCharacterStyles" label="Tag Character Styles" image="tag" size="large" onAction="RibbonControl.LaunchMacros" />
          <button id="TagUnstyledParas.TagUnstyledText" label="Style Body Text" image="target" size="large" onAction="RibbonControl.LaunchMacros" />
          <button id="Reports.MacmillanStyleReport" label="Style Report" image="file" size="normal" onAction="RibbonControl.LaunchMacros" />
          <button id="Reports.BookmakerReqs" label="Bookmaker Check" image="checkfile" size="normal" onAction="RibbonControl.LaunchMacros" />
          <button id="LOCtagsMacro.LibraryOfCongressTags" label="CIP Application" image="index" size="normal" onAction="RibbonControl.LaunchMacros" />
        </group>
        <group id="CustGrp4" label="Help" >
          <button id="VersionCheck.CheckMacmillanGT" label="Macmillan Tools Version" image="info" size="normal" onAction="RibbonControl.LaunchMacros" />
          <button id="VersionCheck.CheckMacmillan" label="Macmillan Styles Version" image="info" size="normal" onAction="RibbonControl.LaunchMacros" />
          <button id="EasterEggs.Triceratops" image="pizza" size="normal" onAction="RibbonControl.LaunchMacros" />
        </group>
      </tab>
    </tabs>
  </ribbon>
</customUI>